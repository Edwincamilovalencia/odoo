<odoo>
    <!-- Vista en Lista (Tree) -->
    <record id="view_project_type_list" model="ir.ui.view">
        <field name="name">Project Type List</field>
        <field name="model">project.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_project_type" model="ir.actions.act_window">
        <field name="name">Tipos de Proyecto</field>
        <field name="res_model">project.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_type_list"/>
    </record>

    <menuitem id="menu_project_type"
            name="Tipos de Proyecto"
            parent="project.menu_projects_config"
            action="action_project_type"
            sequence="10" />

    <!-- Vista en Formulario -->
    <record id="view_project_type_form" model="ir.ui.view">
        <field name="name">Project Type Form</field>
        <field name="model">project.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
