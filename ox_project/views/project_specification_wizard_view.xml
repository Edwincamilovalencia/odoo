<!-- views/project_specification_wizard_view.xml -->
<odoo>
    <record id="view_project_specification_wizard_form" model="ir.ui.view">
        <field name="name">project.specification.wizard.form</field>
        <field name="model">project.specification.wizard</field>
        <field name="arch" type="xml">
            <form string="Pedir Especificaciones">
                <group>
                    <field name="reason" placeholder="Explica por qué se pide una corrección..." />
                </group>
                <footer>
                    <button string="Enviar" type="object" name="action_submit_reason" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_specification_wizard" model="ir.actions.act_window">
        <field name="name">Pedir Especificaciones</field>
        <field name="res_model">project.specification.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_project_specification_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
