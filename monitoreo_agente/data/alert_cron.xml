<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job para verificar llamadas diarias -->
        <record id="cron_check_daily_calls" model="ir.cron">
            <field name="name">Verificar llamadas diarias</field>
            <field name="model_id" ref="model_monitoreo_alert"/>
            <field name="state">code</field>
            <field name="code">model.check_daily_calls()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=8, minute=0, second=0)"/>
        </record>
    </data>
</odoo>
