<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Datos iniciales para el Dashboard Kanban -->
        <record id="dashboard_calls_by_day" model="monitoreo.dashboard">
            <field name="name">Llamadas por día - Total llamadas actuales</field>
            <field name="dashboard_type">calls_by_day</field>
            <field name="icon">fa-chart-bar</field>
            <field name="color">primary</field>
            <field name="description">Cantidad total de llamadas registradas en el sistema</field>
        </record>

        <record id="dashboard_agent_states" model="monitoreo.dashboard">
            <field name="name">Estados de agentes - Total agentes actuales</field>
            <field name="dashboard_type">agent_states</field>
            <field name="icon">fa-user-circle</field>
            <field name="color">success</field>
            <field name="description">Cantidad de agentes únicos que han realizado llamadas</field>
        </record>

        <record id="dashboard_calls_by_hour" model="monitoreo.dashboard">
            <field name="name">Llamadas por hora - Total llamadas actuales</field>
            <field name="dashboard_type">calls_by_hour</field>
            <field name="icon">fa-chart-line</field>
            <field name="color">info</field>
            <field name="description">Distribución de llamadas por hora del día</field>
        </record>

        <record id="dashboard_recent_alerts" model="monitoreo.dashboard">
            <field name="name">Alertas - Total alertas recientes</field>
            <field name="dashboard_type">recent_alerts</field>
            <field name="icon">fa-bell</field>
            <field name="color">warning</field>
            <field name="description">Cantidad de alertas generadas en los últimos días</field>
        </record>
    </data>
</odoo>
