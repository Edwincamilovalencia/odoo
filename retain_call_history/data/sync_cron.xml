<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción planificada para sincronizar historial Retell diariamente -->
    <record id="cron_sync_retell_history" model="ir.cron">
        <field name="name">Sincronizar Historial</field>
        <field name="model_id" ref="model_retain_call_history"/>
        <field name="state">code</field>
        <field name="code">model.cron_sincronizar_historial()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
        <!-- Ejecutar a las 23:30 cada día -->
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=23, minute=30, second=0, microsecond=0)"/>
        <field name="priority">5</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
